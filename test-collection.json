              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Marko\",\n  \"email\": \"marko@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Create VHS - Matrix",
          "request": {
            "method": "POST",
