{
  "info": {
    "name": "VHS Rental API - Full Test Suite",
    "description": "Complete collection for testing Users, VHS, Rentals (rent & return)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Setup",
      "item": [
        {
          "name": "Create User - Ana",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Ana\",\n  \"email\": \"ana@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Create User - Marko",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
