        },
        {
          "name": "Create VHS - Titanic",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Titanic\",\n  \"genre\": \"Drama\",\n  \"releaseYear\": 1997\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/vhs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vhs"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "VHS",
      "item": [
        {
          "name": "List VHS",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/vhs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vhs"]
            }
          }
        },
        {
          "name": "Get VHS by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/vhs/{{vhsId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vhs", "{{vhsId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Rentals",
      "item": [
        {
          "name": "Rent VHS (user 1 rents vhs 1)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 1,\n  \"vhsId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rentals",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rentals"]
            }
          }
        },
        {
          "name": "List Rentals",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/rentals",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rentals"]
            }
          }
        },
        {
          "name": "List Active Rentals",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/rentals/active",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rentals", "active"]
            }
          }
        },
        {
          "name": "Return Rental (rentalId = 1)",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/rentals/1/return",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rentals", "1", "return"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081"
    },
    {
      "key": "userId",
      "value": "1"
    },
    {
      "key": "vhsId",
      "value": "1"
    }
  ]
}